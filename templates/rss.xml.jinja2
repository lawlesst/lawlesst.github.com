{#
From: https://github.com/hypothesis/h/blob/master/h/templates/rss.xml.jinja2

Generic template for rendering an RSS feed given a feed dict.
The feed dict should be a logical representation of an RSS feed as a Python
dict, including a list of dicts for the feed's items. This template will
render the feed to RSS XML.
-#}
<?xml version="1.0"?>
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ name }}</title>
    <link>{{ link }}</link>
    <atom:link href="{{ feed_url }}" rel="self" type="application/rss+xml" />
    <description>{{ description }}</description>
    <pubDate>{{ pub_date.strftime('%a, %d %b %y %T') }} EST</pubDate>
    <docs>http://blogs.law.harvard.edu/tech/rss</docs>

    {% for item in posts %}
    <item>
       <title>{{ item.title }}</title>
       <description>{{ item.description|safe }}</description>
       <pubDate>{{ item.date_obj.strftime('%a, %d %b %y %T') }} EST</pubDate>
       <guid isPermaLink="false">{{ item.link }}</guid>
       <link>{{ item.link }}</link>
       <dc:creator><![CDATA[Ted Lawless]]></dc:creator>
    </item>
    {% endfor %}
  </channel>
</rss>